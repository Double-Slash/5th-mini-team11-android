<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.tutorial.Tutorial1Fragment">


    <TextView
        android:id="@+id/tvLabel"
        android:layout_width="240dp"
        android:layout_height="150dp"
        android:layout_marginStart="22dp"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="135dp"
        android:text=""
        android:textColor="@color/colorPrimaryDark"
        android:textSize="24sp"
        android:textStyle="bold"
        android:typeface="normal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tvDetail"
        android:layout_width="206dp"
        android:layout_height="60dp"
        android:layout_marginStart="22dp"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="15dp"
        android:text=""
        android:textColor="@color/colorPrimary"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvLabel" />

    <ImageView
        android:id="@+id/imageview_logo"
        android:layout_width="130sp"
        android:layout_height="62sp"
        android:layout_marginStart="170sp"
        android:layout_marginLeft="170sp"
        android:layout_marginTop="163dp"
        android:layout_marginEnd="170sp"
        android:layout_marginRight="170sp"
        android:layout_marginBottom="70sp"
        android:src="@drawable/ic_logo"
        app:layout_constraintBottom_toTopOf="@+id/tvGuide"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvLabel" />


    <TextView
        android:id="@+id/tvGuide"
        android:layout_width="211sp"
        android:layout_height="66sp"
        android:layout_marginStart="67sp"
        android:layout_marginLeft="67sp"
        android:layout_marginTop="220sp"
        android:layout_marginEnd="67sp"
        android:layout_marginRight="67sp"
        android:layout_marginBottom="208sp"
        android:gravity="center"
        android:text=""
        android:textColor="@color/colorPrimaryDark"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvDetail" />


    <View

        android:id="@+id/view_line"
        android:layout_width="229sp"
        android:layout_height="1sp"
        android:layout_marginStart="58sp"
        android:layout_marginLeft="58sp"
        android:layout_marginTop="273sp"
        android:layout_marginEnd="58sp"
        android:layout_marginRight="58sp"
        android:layout_marginBottom="220sp"
        android:background="#707070"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvDetail" />


</androidx.constraintlayout.widget.ConstraintLayout>