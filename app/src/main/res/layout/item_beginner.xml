<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:baselineAligned="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/itemIv"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:scaleType="center"
                    android:src="@drawable/beginner_empty" />


                <TextView
                    android:id="@+id/itemTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="이름"
                    android:textSize="20sp"
                    android:layout_alignBottom="@+id/itemIv"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"/>


                <TextView
                    android:id="@+id/itemTv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="설명"
                    android:textSize="15sp"
                    android:layout_alignBottom="@+id/itemIv"
                    android:layout_marginBottom="50dp"
                    android:layout_marginLeft="10dp"
                    android:gravity="bottom"/>


                <ImageView
                    android:id="@+id/itemIv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/tiem_icon"
                    android:layout_alignBottom="@+id/itemIv"
                    android:layout_toRightOf="@+id/itemTv"
                    android:layout_marginBottom="15dp"/>

                <TextView
                    android:id="@+id/itemTv3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="시간"
                    android:textSize="10sp"
                    android:layout_toRightOf="@+id/itemIv2"
                    android:layout_marginBottom="15dp"
                    android:layout_alignBottom="@+id/itemIv"/>

                <ImageView
                    android:id="@+id/itemIv3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/level_icon"
                    android:layout_alignBottom="@+id/itemIv"
                    android:layout_toRightOf="@+id/itemTv3"
                    android:layout_marginBottom="15dp"/>

                <TextView
                    android:id="@+id/itemTv4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="단계"
                    android:textSize="10sp"
                    android:layout_toRightOf="@id/itemIv3"
                    android:layout_alignBottom="@+id/itemIv"
                    android:layout_marginBottom="15dp"/>

                <ImageView
                    android:id="@+id/itemIv4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/bookmark_icon"
                    android:layout_alignRight="@+id/itemIv"
                    android:layout_alignBottom="@+id/itemIv"
                    android:layout_marginBottom="10dp"/>

            </RelativeLayout>
        </FrameLayout>

    </LinearLayout>

</LinearLayout>