<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="20dp"
    android:baselineAligned="true"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/recipeTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="설명"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/recipeIv"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/recipe_bookmark" />
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/recipeTv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이름"
                android:textSize="20sp" />


            <ImageView
                android:id="@+id/recipeIv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/recipe_time"
                android:layout_toRightOf="@id/recipeTv2"/>

            <TextView
                android:id="@+id/recipeTv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="시간"
                android:textSize="10sp"
                android:layout_toRightOf="@id/recipeIv2"
                android:layout_marginTop="10dp"/>

            <ImageView
                android:id="@+id/recipeIv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/recipe_level"
                android:layout_toRightOf="@id/recipeTv3"
                android:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/recipeTv4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="단계"
                android:textSize="10sp"
                android:layout_toRightOf="@id/recipeIv3"
                android:layout_marginTop="10dp"/>
        </RelativeLayout>
    </LinearLayout>


</LinearLayout>
