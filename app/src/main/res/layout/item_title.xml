<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textview_title_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:lineSpacingExtra="12sp"
        android:fontFamily="@font/notosans_kr_medium"
        android:includeFontPadding="false"
        android:textColor="@color/greyish_brown"
        android:textSize="24sp"
        android:layout_marginVertical="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="인기메뉴" />


    <TextView
        android:id="@+id/textview_title_sub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="6sp"
        android:textColor="@color/brownish_grey"
        android:textSize="13sp"
        android:fontFamily="@font/notosans_kr_medium"
        android:includeFontPadding="false"
        android:layout_marginLeft="10dp"
        app:layout_constraintBottom_toBottomOf="@id/textview_title_main"
        app:layout_constraintLeft_toRightOf="@id/textview_title_main"
        tools:text="이번주 가장 핫한 레시피" />
</androidx.constraintlayout.widget.ConstraintLayout>