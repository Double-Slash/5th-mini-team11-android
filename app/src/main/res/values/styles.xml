<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppBar">
        <item name="android:background">@color/white</item>
    </style>


    <!-- region Text View Style -->
    <style name="TutorialTitle">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Title">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/greyish_brown</item>
    </style>

    <style name="RecipeNumber">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/orange_yellow</item>
    </style>

    <style name="RecipeTileOrRecipeBodyText">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/greyish_brown</item>
    </style>

    <style name="AppBarTitle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="TutorialTriggerMessage">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/greyish_brown</item>
    </style>

    <style name="MenuCardTitle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Searching">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/greyish_brown</item>
    </style>

    <style name="IngredientInfoBodyText">
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">14sp</item>
        <item name="android:textColor">@color/greyish_brown</item>
    </style>

    <style name="BeforeSearchAndSearchHistoryOrSearchResultAmount">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/brown_grey</item>
    </style>

    <style name="AndroidNotice">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#009688</item>
    </style>

    <style name="TagOrCategoryTitle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TapActivatedOrIngredientTitleOrIngedientAmount">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/greyish_brown</item>
    </style>

    <style name="IngredientList">
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingExtra">10sp</item>
        <item name="android:textColor">#505050</item>
    </style>

    <style name="TapUnactivated">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/brownish_grey</item>
    </style>

    <style name="TutorialIntroOrSubtitle">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/brownish_grey</item>
    </style>

    <style name="IngedientCriteria">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/brown_grey</item>
    </style>

    <style name="TimeAndLevel">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/brownish_grey</item>
    </style>

    <style name="MenuCardSubtitleAndTimeAndLevel">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/mango</item>
    </style>
    <!--    endregion-->


    <style name="TextViewDefault">
        <item name="android:textColor">@color/greyish_brown</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TitleMain" parent="TextViewDefault">
        <item name="android:textSize">29sp</item>
        <item name="android:textColor">@color/greyish_brown</item>
    </style>

    <style name="TitleSub" parent="TextViewDefault">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/brownish_grey</item>
    </style>


    <style name="TabLayout">
        <item name="tabTextColor">@color/brownish_grey</item>
        <item name="tabSelectedTextColor">@color/greyish_brown</item>
        <item name="tabIndicatorColor">@color/orange_yellow</item>
    </style>


</resources>