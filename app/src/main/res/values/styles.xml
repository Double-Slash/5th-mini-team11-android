<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppBar">
        <item name="android:background">@color/white</item>
    </style>


    <style name="TextViewDefault">
        <item name="android:textColor">@color/greyish_brown</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TitleMain" parent="TextViewDefault">
        <item name="android:textSize">29sp</item>
        <item name="android:textColor">@color/greyish_brown</item>
    </style>

    <style name="TitleSub" parent="TextViewDefault">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/brownish_grey</item>
    </style>

    <style name="TabLayout">
        <item name="tabTextColor">@color/brownish_grey</item>
        <item name="tabSelectedTextColor">@color/greyish_brown</item>
        <item name="tabIndicatorColor">@color/colorMain</item>
    </style>

</resources>